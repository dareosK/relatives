<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-lewagon-white nav-elements shadow-sm fixed-top">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo.jpg", class: "avatar avatar-crop-square" %>
  <% end %>

  <h3 class="nav-text align-middle justify-content">RELATIVES</h3>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <%= image_tag "angie.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Bookings", "#", class: "dropdown-item" %>
          <%= link_to "My relatives", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <%= link_to "Create relative", "/family_members/new", class: "dropdown-item" %>
          <% else  %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
            </li>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
