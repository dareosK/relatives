<div class="container d-flex rel-margin-top" style="justify-content: space-between">
  <div class="card booking-card" style="width: 30rem;">
    <div style="width: 100%; overflow: hidden;" class="justify-content-center d-flex">
      <%= cl_image_tag (@family_member.image.key), transformation= { width: 500, height: 250, gravity: :faces, crop: :fill } %>
    </div>
    <div class="card-body">
      <p class="card-text"><h2><%= @family_member.name %></h2>
        <p><%= @family_member.age %></p>
        <p><%= @family_member.kinship %></p>
        <p><%= @family_member.description %></p></p>
        <div class="family-member-btns">
          <%= link_to "edit", edit_family_member_path, class: "btn btn-relatives btn-edit" %>
          <%= link_to "delete", destroy_family_members_path, method: :delete, data: {confirm: "Are you sure you want to delete this relative?" }, class: "btn btn-relatives"%>
        </div>
        <%#(@family_member) %>
    </div>
  </div>

  <div class="new-booking-wrap bg-white d-flex rel-margin-top" style="align-items: center;">
    <div class="new-booking column">
      <h1>Create New Booking</h1>

      <%= simple_form_for [@family_member, @booking] do |f|%>
      <%#= f.association :family_member %>
      <%= f.input :start_date, class: "booking-inputs"%>
      <%= f.input :end_date, class: "booking-inputs"%>
      <div class="family-member-btns">
        <%= f.submit class: "btn btn-relatives"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
