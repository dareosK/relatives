<div class="banner-search-bar">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://alecsoth.com/photography/media/pages/projects/sleeping-by-the-mississippi/4043520684-1551319080/2000_04zl0010-f.jpg);">
    <div class="container">
      <h1 style="letter-spacing: 1px;">Looking for a Grandma?</h1>
      <p>Br√ºnhilde's Sauerkraut is unbeatable!</p>
    </div>
  </div>
</div>


<div class="search-bar d-flex align-items-center justify-content-center" id="homepage-box" style="z-index: 1; margin-left: 60px;">
  <div class="form-group row">
    <%= form_tag family_members_path, method: :get do %>
    <%= label :kinship, 'Find' %>
    <%= select_tag :kinship, raw(
      "<option value='Grandma'>Grandmas</option>
        <option value='Grandpa'>Grandpas</option>
        <option value='Uncle'>Uncles</option>
        <option value='Aunt'>Aunts</option>
        <option value='Cousin'>Cousins</option>
        <option value='Brother'>Brothers</option>
        <option value='Sister'>Sisters</option>
        <option value='Father'>Fathers</option>
        <option value='Mother'>Mothers</option>"
      ) %>
      <%= label :query, 'in' %>
      <%= text_field_tag :query %>
      <%= submit_tag("Search!") %>
    <% end %>
  </div>
</div>

<div class="landing_headers"><h2>Rent the perfect Relative!</h2></div>


<div class="container d-flex flex-column" id="featured-relatives">
  <div class="row justify-content-around">
    <%= link_to family_members_path(description: "excellent") do %>
    <div class="card" style="width: 18rem;">
      <%= image_tag "dad.jpg", class: "card-img-top"%>
        <div class="card-body">
          <h5 class="card-title">Excellent Fathers</h5>
          <p class="card-text">Emotionally available, good at operating a grill, great at jokes! </p>
        </div>
      <% end %>
    </div>
    <%= link_to family_members_path(description: "tough") do %>
    <div class="card" style="width: 18rem;">
      <%= image_tag "grandma.jpg", class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title">Grandmas Who Take No Shit</h5>
        <p class="card-text">Useless boyfriend? Hair getting too long? Our acerbic Grannies will tell you how it is.</p>
      </div>
      <% end %>
    </div>
    <%= link_to family_members_path(description: "menacing") do %>
    <div class="card" style="width: 18rem;">
      <%= image_tag "coolguy.jpg", class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title">Tough Older Siblings</h5>
        <p class="card-text">Hire one of our menacing teenagers to eradicate your child's bully the old fashioned way.</p>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="landing_headers" id="h2-featured-relatives"><h2>Featured Relatives</h2></div>


<div class="container">
  <div class="row justify-content-around">
    <div class="cards">
      <% @featured_relatives.each do |relative| %>
          <%= link_to family_member_path(relative.id) do %>
            <div class=" card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path relative.image.key, gravity: "face", crop: "thumb" %>)">
              <%= relative.name %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>

</div>
